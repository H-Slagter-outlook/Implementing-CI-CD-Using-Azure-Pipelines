{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "environmentName": {
            "type": "string",
            "defaultValue": "test"
        },
        "registryName": {
            "type": "string",
            "defaultValue": "packtadocicd"
        },
        "containerTag": {
            "type": "string",
            "defaultValue": "latest"
        }
    },
    "variables": {
        "containerName": "[concat(parameters('environmentName'),'-packt-store-checkout')]",
        "dnsNameLabel": "[concat(parameters('environmentName'),'-packt-store-checkout')]",
        "portNumber": "5015"
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[variables('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "zones": [],
            "properties": {
                "containers": [
                    {
                        "name": "[variables('containerName')]",
                        "properties": {
                            "image": "[concat(parameters('registryName'), '.azurecr.io/packt-store-checkout:', parameters('containerTag'))]",
                            "environmentVariables": [
                                {
                                    "name": "ASPNETCORE_URLS",
                                    "value": "[concat('http://+:',variables('portNumber'))]"
                                },
                                {
                                    "name": "PORT",
                                    "value": "[variables('portNumber')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": "1",
                                    "memoryInGB": "2"
                                }
                            },
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": "[variables('portNumber')]"
                                }
                            ],
                            "livenessProbe": {
                                "httpGet": {
                                    "path": "/health",
                                    "port": "[variables('portNumber')]",
                                    "scheme": "http"
                                },
                                "periodSeconds": 5,
                                "initialDelaySeconds": 2
                            },
                            "readinessProbe": {
                                "httpGet": {
                                    "path": "/health",
                                    "port": "[variables('portNumber')]",
                                    "scheme": "http"
                                },
                                "periodSeconds": 5,
                                "initialDelaySeconds": 2
                            }
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux",
                "sku": "Standard",
                "imageRegistryCredentials": [
                    {
                        "server": "[concat(parameters('registryName'), '.azurecr.io')]",
                        "username": "[parameters('registryName')]",
                        "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('registryName')), '2023-01-01-preview').passwords[0].value]"
                    }
                ],
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": "[variables('portNumber')]"
                        }
                    ],
                    "dnsNameLabel": "[variables('dnsNameLabel')]",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                }
            },
            "tags": {}
        }
    ],
    "outputs": {
        "containerFQDN": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerName'))).ipAddress.fqdn]"
        }
    }
}